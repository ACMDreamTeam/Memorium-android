<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionnaireActivity">



    <LinearLayout
        android:id="@+id/married"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:visibility="invisible"
        android:animateLayoutChanges="true"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you married?"
            android:textColor="#000000"
            android:textSize="35dp"/>

        <RadioGroup
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp">
            <RadioButton
                android:id="@+id/yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onQuestionAnswered"
                android:text="Yes"/>
            <RadioButton
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onQuestionAnswered"
                android:text="No"/>
            <RadioButton
                android:id="@+id/notSure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onQuestionAnswered"
                android:text="I am not sure"/>
        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/spouse_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:animateLayoutChanges="true"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is your spouse name?"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:fontFamily="@font/nunito_sans"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/spouse_name_txt"
            android:layout_height="90dp"
            app:counterEnabled="true"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxBackgroundMode="outline"

            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="35dp"

            app:counterMaxLength="30"
            >

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/name_txt"
                android:layout_width="match_parent"
                android:maxLength="30"
                android:layout_height="60dp"
                android:hint="Spouse Name"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/primary_btn"
            android:textColor="#fff"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/siblings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:visibility="invisible"
        android:animateLayoutChanges="true"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you have siblings?"

            android:textColor="#000000"
            android:textSize="35dp"/>

        <RadioGroup
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp">
            <RadioButton
                android:id="@+id/yes_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onQuestionAnswered"
                android:text="Yes"/>
            <RadioButton
                android:id="@+id/no_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onQuestionAnswered"
                android:text="No"/>
            <RadioButton
                android:id="@+id/notSure_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onQuestionAnswered"
                android:text="I am not sure"/>
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>