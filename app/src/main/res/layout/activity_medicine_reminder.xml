<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicineReminder">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Plan"
        android:textColor="#000000"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="25dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/title"
        android:id="@+id/username_item"
        android:layout_height="90dp"
        app:counterEnabled="false"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:boxBackgroundMode="outline"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="35dp"

        app:counterMaxLength="30"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:maxLength="30"
            android:layout_height="60dp"
            android:hint="Medicine Input"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_item"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="Amount and Duration"/>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="100dp"
        android:layout_below="@+id/username_item"
        android:id="@+id/number_input"
        android:layout_height="90dp"
        app:counterEnabled="false"

        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:boxBackgroundMode="outline"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="35dp"

        app:counterMaxLength="30"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:maxLength="30"
            android:gravity="center"
            android:inputType="number"
            android:layout_height="60dp"
            android:hint="0-9"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="200dp"
        android:layout_below="@+id/username_item"
        android:id="@+id/duration_item"
        android:layout_height="90dp"
        app:counterEnabled="false"
        android:layout_toRightOf="@+id/number_input"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:boxBackgroundMode="outline"

        android:layout_marginTop="35dp"

        app:counterMaxLength="30"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:maxLength="30"
            android:gravity="center"
            android:layout_height="60dp"
            android:hint="No of days"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/freq_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/duration_item"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="Frequency"/>

    <RadioGroup

        android:id="@+id/food"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/rem"
        android:layout_marginHorizontal="25dp">
        <RadioButton
            android:id="@+id/bfood"
            android:layout_marginHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onReminderSelect"
            android:text="Before food"/>
        <RadioButton
            android:id="@+id/afood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onReminderSelect"
            android:layout_marginHorizontal="20dp"
            android:text="After food"/>


    </RadioGroup>

    <RadioGroup

        android:id="@+id/rem"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/freq_txt"
        android:layout_marginHorizontal="25dp">
        <RadioButton
            android:id="@+id/daily"
            android:layout_marginHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onReminderSelect"
            android:text="Daily"/>
        <RadioButton
            android:id="@+id/weekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onReminderSelect"
            android:layout_marginHorizontal="20dp"
            android:text="Weekly"/>


    </RadioGroup>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food"
        android:text="Submit"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/primary_btn"
        android:textColor="#fff"/>





</RelativeLayout>