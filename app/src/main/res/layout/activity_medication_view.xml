<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicationViewActivity"
    android:background="#EFEFEF">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/med_type"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/pills"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/med_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dolo 650"
            android:layout_below="@id/med_type"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="35sp"
            android:fontFamily="@font/nunito_sans"
            android:textColor="@color/black_text"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/med_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created on 05-01-2023"
            android:layout_below="@id/med_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:fontFamily="@font/nunito_sans"
            android:textColor="@color/black_text"

            />

        <TextView
            android:id="@+id/Shedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule"
            android:layout_below="@id/med_create"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="30dp"
            android:fontFamily="@font/nunito_sans"
            android:textColor="@color/black_text"

            />

        <androidx.cardview.widget.CardView
            android:id="@+id/freq_card"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="25dp"
            android:elevation="25dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/Shedule">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/med_frequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly"
                    android:paddingStart="15dp"
                    android:fontFamily="@font/nunito_sans"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="28dp"/>


                <TextView
                    android:id="@+id/med_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/nunito_sans"
                    android:paddingStart="20dp"
                    android:paddingBottom="10dp"
                    android:text="22:00"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/med_weekday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/nunito_sans"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:text="Every Monday"
                    android:textSize="20dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/eat_card"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="25dp"
            android:elevation="25dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/freq_card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/med_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="After food"
                    android:paddingStart="15dp"
                    android:fontFamily="@font/nunito_sans"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="28dp"/>


                <TextView
                    android:id="@+id/med_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/nunito_sans"
                    android:paddingStart="20dp"
                    android:paddingBottom="10dp"
                    android:text="1 pill"
                    android:textSize="20dp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/Delete_card"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="25dp"
            android:elevation="25dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/eat_card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/Delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:paddingStart="15dp"
                    android:fontFamily="@font/nunito_sans"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:textSize="28dp"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>




    </RelativeLayout>






</ScrollView>