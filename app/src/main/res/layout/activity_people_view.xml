<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PeopleViewActivity">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar"
        android:background="#0F4674"
        tools:context=".ToolbarActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="150dp"
                android:layout_marginHorizontal="20dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:src="@drawable/memorium"/>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/face_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@color/black"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/name"
        android:layout_below="@+id/face_view"
        android:layout_marginTop="25dp"
        android:textSize="22sp"
        android:text="Name: Abid nafi"
        android:background="@drawable/edit_text"
        android:backgroundTint="#F6F6F6"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/phone"
        android:layout_below="@+id/name"
        android:layout_marginTop="25dp"
        android:textSize="22sp"
        android:text="Name: Abid nafi"
        android:background="@drawable/edit_text"
        android:backgroundTint="#F6F6F6"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/notes"
        android:layout_below="@+id/phone"
        android:layout_marginTop="25dp"
        android:textSize="22sp"

        android:background="@drawable/edit_text"
        android:backgroundTint="#F6F6F6"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textAllCaps="false"

        android:background="@drawable/new_btn"
        android:textColor="@color/white"
        android:layout_below="@+id/notes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Delete Person"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:background="@drawable/new_btn"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>




</RelativeLayout>
