<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/darker_primary"
        android:layout_marginVertical="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/type_img"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/syrup"
                android:layout_marginEnd="5dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/med_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pankaja Kasturi"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_sans"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/type_img"
                android:layout_marginEnd="30dp"/>


            <TextView
                android:id="@+id/med_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 : 00"
                android:layout_below="@+id/med_name"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_sans"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/type_img"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/med_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Before food"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_sans"
                android:textSize="15dp"
                android:visibility="visible"
                android:layout_toEndOf="@+id/type_img"
                android:layout_below="@+id/med_time"

                android:layout_marginTop="10dp"
                android:textStyle="bold"

                android:layout_marginStart="20dp"

                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/med_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Spoon"
                android:visibility="visible"
                android:layout_below="@+id/med_time"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_sans"
                android:textSize="15dp"
                android:layout_marginEnd="50dp"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/med_frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_sans"
                android:textSize="15dp"
                android:visibility="visible"
                android:layout_below="@+id/med_food"
                android:layout_marginTop="10dp"

                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/type_img"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/med_weekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Every Monday"
                android:layout_below="@+id/med_food"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_sans"
                android:textSize="15dp"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_alignParentEnd="true"
               android:layout_marginEnd="50dp"
                android:textStyle="bold"
               />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>